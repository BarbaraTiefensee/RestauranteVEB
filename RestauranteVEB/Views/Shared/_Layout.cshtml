                            <a class="collapse-item" href="~/Pedido/Cadastrar"><i class="fas fa-table"></i>Pedidos</a>
                        </div>
                    </div>
                </li>
            }

            <!-- Divider -->
            <!-- Heading -->
            <!-- Nav Item - Pages Collapse Menu -->
            <!-- Nav Item - Charts -->
            <!-- Nav Item - Tables -->
            <!-- Divider -->

@model List<RestauranteVEB.Models.IngredienteQueryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Quantidade</th>
    </tr>

    @foreach (RestauranteVEB.Models.IngredienteQueryViewModel item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Nome</td>
            <td>@item.Quantidade</td>
        </tr>
    }
</table>


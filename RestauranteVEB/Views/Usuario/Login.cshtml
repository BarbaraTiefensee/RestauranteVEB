
@{
    ViewData["Title"] = "Login";
}

<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

</head>

<body>
    <form action="Login" method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <div class="form-label-group">
                <input type="text" name="Email" id="Email" class="form-control" placeholder="Email">
                <span id="erroEmail" name="erroEmail" class="text-danger"></span><br />
            </div>
        </div>

        <div class="form-group">
            <label for="Senha">Senha</label>
            <div class="form-label-group">
                <input type="password" name="Senha" id="Senha" class="form-control" placeholder="Senha">
                <span id="erroSenha" name="erroSenha" class="text-danger"></span><br />
                <span class="text-danger">@ViewBag.ErrorMessage</span><br />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Logar" class="btn btn-default" id="BotaoLogar" name="BotaoLogar" />
                <input type="submit" value="Limpar" class="btn btn-default" id="BotaoLimpar" name="BotaoLimpar" />
            </div>
        </div>
    </form>
</body>
</html>



@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            $("#BotaoLogar").click(function (e) {

                var sucesso = true;
                var email = $("#Email").val();
                var senha = $("#Senha").val();

                if (email == "") {
                    $("#erroEmail").html("O email deve ser informado.");
                    sucesso = false;
                }
                else {
                    if (!validateEmail(email)) {
                        $("#erroEmail").html("Email no formato incorreto.");
                        sucesso = false;
                    }
                    else {
                        $("#erroEmail").html("");
                    }
                }
                if (senha == "") {
                    $("#erroSenha").html("A senha deve ser informada.");
                    sucesso = false;
                }
                else {
                    if (senha.length < 6 || senha.length > 16) {
                        $("#erroSenha").html("A senha deve conter no mínimo 6 a 16 caracteres.");
                        sucesso = false;
                    }
                    else {
                        $("#erroSenha").html("");
                    }
                }

                if (!sucesso) {
                    e.preventDefault();
                }
            });

            $("#BotaoLimpar").click(function () {
                $("#Email").val("");
                $("#Senha").val("");
            });
        });
    </script>
}